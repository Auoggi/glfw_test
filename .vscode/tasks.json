{
    "tasks": [
        {
            "type": "shell",
            "label": "build glfw project",
            "command": "/usr/bin/x86_64-w64-mingw32-g++",
            "args": [
                "-g",
                "${file}",
                "./include/glad/gl.c",
                "./lib/shader.cpp", "./lib/texture.cpp", "./lib/resource_manager.cpp", "./lib/sprite_renderer.cpp",  
                "-o", "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-I", "./include", "./include/GLFW/lib-mingw-w64/libglfw3.a",
                "-lopengl32", "-lgdi32"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "run glfw project",
            "command": "${fileDirname}/${fileBasenameNoExtension}.exe",
            "dependsOn": "build glfw project",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}